# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (PostgreSQL connection string)
DATABASE_URL=postgresql://user:password@host:port/database

# Payment Provider Selection
# Set to one of: stripe, lemonsqueezy, razorpay, dodo
NEXT_PUBLIC_PAYMENT_PROVIDER=stripe

# Stripe (required if using Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (optional, can be set in lib/config.ts)
STRIPE_PRO_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID_YEARLY=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID_YEARLY=price_...

# Lemon Squeezy (required if using Lemon Squeezy)
LEMONSQUEEZY_API_KEY=...
LEMONSQUEEZY_WEBHOOK_SECRET=...
NEXT_PUBLIC_LEMONSQUEEZY_STORE_ID=...

# Lemon Squeezy Variant IDs (optional, can be set in lib/config.ts)
LEMONSQUEEZY_PRO_VARIANT_ID_MONTHLY=variant_...
LEMONSQUEEZY_PRO_VARIANT_ID_YEARLY=variant_...
LEMONSQUEEZY_ENTERPRISE_VARIANT_ID_MONTHLY=variant_...
LEMONSQUEEZY_ENTERPRISE_VARIANT_ID_YEARLY=variant_...

# Razorpay (required if using Razorpay)
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...
RAZORPAY_WEBHOOK_SECRET=...

# Razorpay Plan IDs (optional, can be set in lib/config.ts)
RAZORPAY_PRO_PLAN_ID_MONTHLY=plan_...
RAZORPAY_PRO_PLAN_ID_YEARLY=plan_...
RAZORPAY_ENTERPRISE_PLAN_ID_MONTHLY=plan_...
RAZORPAY_ENTERPRISE_PLAN_ID_YEARLY=plan_...

# Dodo Payments (required if using Dodo)
DODO_API_KEY=...
DODO_WEBHOOK_SECRET=...
NEXT_PUBLIC_DODO_MERCHANT_ID=...

# Dodo Payments Plan IDs (optional, can be set in lib/config.ts)
DODO_PRO_PLAN_ID_MONTHLY=plan_...
DODO_PRO_PLAN_ID_YEARLY=plan_...
DODO_ENTERPRISE_PLAN_ID_MONTHLY=plan_...
DODO_ENTERPRISE_PLAN_ID_YEARLY=plan_...

# Resend
RESEND_API_KEY=re_...

# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
